<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/sn_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25px"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="SN"/>
    <!--种类  用产品型号代替 android:focusable="false"-->
    <TextView
        android:id="@+id/pass_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25px"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="PASS"/>
    <TextView
        android:id="@+id/mac_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25px"
        android:textColor="@color/black"
        android:text="MAC"
        android:gravity="center" />
    <!--订单号-->
    <TextView
        android:id="@+id/pno_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25px"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="PNO"/>
    <!--需要打印的数量-->
    <TextView
        android:id="@+id/enc_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25px"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="ENCRYPTION"/>
    <!--已经打印的数量-->
    <TextView
        android:id="@+id/date_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25px"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="DATE"/>

    <TextView
        android:id="@+id/des_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25px"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="DESCRIPTION"/>

    <TextView
        android:id="@+id/key_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25px"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="KEY"/>

</LinearLayout>