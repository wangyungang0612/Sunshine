<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_experience_content_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ebebeb"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/sn_textview"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="#aa000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pass_textview"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="#aa000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mac_textview"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="#aa000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/pno_textview"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="#aa000000"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/enc_textview"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="#aa000000"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/date_textview"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="#aa000000"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/des_textview"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="#aa000000"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/key_textview"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="#aa000000"
        android:textSize="14sp" />

</LinearLayout>